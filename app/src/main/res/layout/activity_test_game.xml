<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:weightSum="2"
    tools:context=".testGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1s1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttons2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttons3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttons4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1a1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonsa2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonsa3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonsa4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Score: 0"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
