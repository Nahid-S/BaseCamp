<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer rectangle with shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Inner rectangle with a 5dp red border -->
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="5dp"
                android:color="#FF0000" /> <!-- Set the border color to red here -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Glowing shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="10dp"
                android:color="#2CFF0000" /> <!-- Set the border color to red here -->
        </shape>
    </item>
</layer-list>
