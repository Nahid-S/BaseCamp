<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Darkest Shadow -->
    <item android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#11000000" /> <!-- Lightest shadow color (adjust alpha value) -->
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp" />
        </shape>
    </item>
    <!-- Slightly Darker Shadow -->
    <item android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Slightly darker shadow color (adjust alpha value) -->
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp" />
        </shape>
    </item>
    <!-- Darker Shadow -->
    <item android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- Darker shadow color (adjust alpha value) -->
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp" />
        </shape>
    </item>
    <!-- Solid Shape (your content) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Set your solid color here -->
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp" />
        </shape>
    </item>
    <!-- Black Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pred" />
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp" />
        </shape>
    </item>
</layer-list>
